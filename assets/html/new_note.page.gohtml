{{template "base" .}}

{{define "main"}}
    <!-- Content Section -->
    <main>
        <form method="POST" action="/note/admin/new">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required><br>
            <label for="text-paragraph">Content:</label>
            <textarea id="text-paragraph" name="text-paragraph" required></textarea><br>
            <button type="submit">Save Note</button>
        </form>
    </main>
{{end}}